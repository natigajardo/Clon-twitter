<!-- Page content holder -->

  <%= form_with(model: tweet, local: true) do |form| %>
   <% if tweet.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

       <ul>
       <% tweet.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
     </div>
   <% end %>

   <div class="card" >
    <div class="card-body">
        <div class="field card-title">
          <%= form.label :content, "#{current_user.username} dice: " %>
        </div>
        <div class="card-text">
          <%= form.text_area :content, id: :tweet_content, :class => "form-control" %>
        </div>

        <div class="actions text-right my-2">
          <%= form.submit "Twittear", :class => "btn btn-warning text-black" %>
        </div>
      <% end %>
    </div>
  </div> 


 
  
